# Staging Environment Configuration

NODE_ENV=staging
PORT=3001

# Staging URLs (replace with your actual staging URLs)
FRONTEND_URL=https://staging.yourdomain.com
PRODUCTION_FRONTEND_URL=https://staging.yourdomain.com

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# OpenWeatherMap API (staging)
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
DEFAULT_CITY=Tokyo

# Google OAuth (staging - use staging credentials)
GOOGLE_REDIRECT_URI=https://staging.yourdomain.com/api/calendar/callback

# Security
CORS_ORIGIN=https://staging.yourdomain.com

# AWS Secrets Manager (recommended for staging)
AWS_REGION=us-east-1
SECRETS_MANAGER_SECRET_NAME=smart-display/staging/secrets